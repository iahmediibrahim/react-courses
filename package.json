{
    "name": "react-courses",
    "version": "0.1.0",
    "private": true,
    "dependencies": {
        "@testing-library/jest-dom": "^5.11.4",
        "@testing-library/react": "^11.1.0",
        "@testing-library/user-event": "^12.1.10",
        "bootstrap": "^4.6.1",
        "react": "^17.0.2",
        "react-dom": "^17.0.2",
        "react-redux": "^7.2.6",
        "react-router-dom": "^6.0.2",
        "react-scripts": "4.0.3",
        "redux": "^4.1.2",
        "redux-immutable-state-invariant": "^2.1.0",
        "redux-thunk": "^2.4.1",
        "web-vitals": "^1.0.1"
    },
    "devDependencies": {
        "json-server": "^0.17.0",
        "lint-staged": "^12.1.2",
        "nodemon": "^2.0.15",
        "npm-run-all": "^4.1.5"
    },
    "scripts": {
        "start": "run-p start:dev start:api",
        "start:dev": "react-scripts start",
        "prestart:api": "node tools/createMockDb.js",
        "start:api": "nodemon --ignore tools/db.json tools/apiServer.js",
        "build": "react-scripts build --stats && webpack-bundle-analyzer build/bundle-stats.json -m server",
        "test": "react-scripts test",
        "test:ci": "cross-env NODE_ENV=CI react-scripts test",
        "eject": "react-scripts eject",
        "storybook": "start-storybook -p 9009 -s public",
        "build-storybook": "build-storybook -s public",
        "cypress": "cypress",
        "chromatic": "chromatic test --app-code=\"gkbd875bekh\"",
        "test:all": "run-p test:ci cypress chromatic",
        "lint": "eslint src cypress/integration"
    },
    "eslintConfig": {
        "extends": [
            "react-app",
            "react-app/jest"
        ]
    },
    "browserslist": {
        "production": [
            ">0.2%",
            "not dead",
            "not op_mini all"
        ],
        "development": [
            "last 1 chrome version",
            "last 1 firefox version",
            "last 1 safari version"
        ]
    }
}
